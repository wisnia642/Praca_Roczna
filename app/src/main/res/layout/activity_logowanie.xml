<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michal.siema.Logowanie"
    android:background="@drawable/images1">

    <EditText
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText26"
        android:layout_below="@+id/editText27"
        android:layout_alignLeft="@+id/textView124"
        android:layout_alignStart="@+id/textView124"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText27"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText26"
        android:layout_alignStart="@+id/editText26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Logowanie do Systemu"
        android:id="@+id/textView124"
        android:layout_marginBottom="77dp"
        android:textSize="30dp"
        android:layout_above="@+id/editText27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="382dp"
        android:layout_marginStart="382dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nazwa użytkownika"
        android:id="@+id/textView127"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/editText27"
        android:layout_toStartOf="@+id/editText27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hasło"
        android:id="@+id/textView130"
        android:layout_alignBottom="@+id/editText26"
        android:layout_alignLeft="@+id/textView127"
        android:layout_alignStart="@+id/textView127" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GASTROMANIA - RESTAURANT"
        android:id="@+id/textView131"
        android:layout_marginTop="49dp"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@color/abc_primary_text_material_light" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button73"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/editText26"
        android:layout_alignLeft="@+id/editText26"
        android:layout_alignStart="@+id/editText26"
        android:background="@drawable/usun1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button74"
        android:background="@drawable/plus2"
        android:layout_alignTop="@+id/button73"
        android:layout_alignRight="@+id/editText26"
        android:layout_alignEnd="@+id/editText26" />

</RelativeLayout>
