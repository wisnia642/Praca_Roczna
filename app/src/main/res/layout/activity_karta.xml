<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.michal.siema.Karta"
    android:background="@drawable/images1">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="550dp"
        android:minWidth="600dp"
        android:measureWithLargestChild="true"
        android:id="@+id/frameLayout"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/salatki"
            android:layout_gravity="right|top"
            android:background="@drawable/sal"
            android:layout_marginRight="40dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/fast_food"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/fast"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/wina"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/wina"
            android:layout_marginRight="480dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/dodatki"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="80dp"
            android:background="@drawable/dodatki"
            android:layout_marginRight="40dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/napoje_gazowane"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gazowane"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/napoje_zimne"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/zimne"
            android:layout_marginRight="140dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/soki"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/soki"
            android:layout_marginRight="40dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/piwo"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/piwo"
            android:layout_marginRight="140dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/napoje_gorace"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/kawa"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/pizza"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:background="@drawable/pizza"
            android:layout_marginRight="140dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/suszi"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="100dp"
            android:background="@drawable/suszi"
            android:layout_marginRight="40dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/zupy"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/zupy"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="330dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/ryba"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="50dp"
            android:background="@drawable/ryba"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/makarony"
            android:layout_gravity="left|top"
            android:layout_marginBottom="50dp"
            android:background="@drawable/makarony"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/przystawki"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/salatki"
            android:layout_marginRight="140dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/desery"
            android:layout_gravity="center"
            android:background="@drawable/desery"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="40dp" />
    </FrameLayout>
</RelativeLayout>
