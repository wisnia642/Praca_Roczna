<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michal.siema.Dodawanie"
    android:background="@drawable/images1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView16"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="153dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:autoText="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView17"
            android:textSize="25dp"
            android:text="Kategoria"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp" />

        <Spinner
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:textSize="340sp"
            android:id="@+id/spinerdod"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="-40dp"
            android:layout_marginLeft="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView18"
            android:textSize="25dp"
            android:text="Nazwa"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextN"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-40dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:textSize="25dp"
            android:text="Składniki"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp" />

        <EditText
            android:layout_width="548dp"
            android:layout_height="60dp"
            android:id="@+id/editTextS"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:layout_weight="0.24"
            android:layout_marginLeft="70dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView20"
            android:textSize="25dp"
            android:text="Cena"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp" />

        <EditText
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextC"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="70dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView21"
            android:textSize="25dp"
            android:text="Zdjęcie"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp" />

        <Button
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:text="Zrób zdjęcie"
            android:id="@+id/but1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-80dp" />

        <Button
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:text="Dodaj z galeri"
            android:id="@+id/but2"
            android:layout_gravity="right"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="110dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/abc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/linearLayout7"
        android:layout_toEndOf="@+id/linearLayout7"
        android:id="@+id/abc">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/but3"
            android:layout_gravity="left|bottom"
            android:textSize="25dp"
            android:layout_marginBottom="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/but4"
            android:layout_gravity="right|bottom"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/usun1" />
    </FrameLayout>

</RelativeLayout>
