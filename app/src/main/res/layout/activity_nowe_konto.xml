<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.michal.siema.Dodawanie"
    android:background="@drawable/images1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="1100dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tworzenie oraz edycja konta"
            android:id="@+id/textView133"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView17"
            android:textSize="25dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="60dp"
            android:text="Edycja danych" />

        <Spinner
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:textSize="340sp"
            android:id="@+id/spinerdod"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="-40dp"
            android:layout_marginLeft="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView18"
            android:textSize="25dp"
            android:text="Login / Imię"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextN"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-40dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:textSize="25dp"
            android:text="Hasło"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="548dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextS"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="70dp"
            android:textSize="25dp"
            android:singleLine="true"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView67"
            android:textSize="25dp"
            android:text="Powtórz Hasło"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="557dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="70dp"
            android:textSize="25dp"
            android:singleLine="true"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView20"
            android:textSize="25dp"
            android:text="Uprawnienia"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wszystko"
            android:id="@+id/checkBox2"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginLeft="-140dp"
            android:layout_marginTop="-20dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuchnia"
            android:id="@+id/checkBox"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-36dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magazyn"
            android:id="@+id/checkBox3"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-37dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sala Sprzedaży"
            android:id="@+id/checkBox4"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="-38dp"
            android:checked="false" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button76"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/usun1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button75"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-90dp"
            android:background="@drawable/plus2" />

    </LinearLayout>

</RelativeLayout>
